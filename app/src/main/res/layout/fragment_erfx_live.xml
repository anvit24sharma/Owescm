<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.owescm.client.Fragment.ErfxFragment.ErfxLiveFragment"
    >

    <TextView
        android:id="@+id/tv_create_erfx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="6dp"
        android:layout_margin="8dp"
        android:text="eRfx Live"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_saved_eRFX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_create_erfx"
            tools:listitem="@layout/item_live_erfx"

            />

</RelativeLayout>
