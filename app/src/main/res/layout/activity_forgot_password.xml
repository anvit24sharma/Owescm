<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:background="#F8F7FD"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="40sp"
        android:gravity="center"
        android:text="Reset Password"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/cv_ll"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_edit_text_ll"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_email" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="Registered Email"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="#000000"
            android:textSize="14sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_resetLink"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/my_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="Send Password Reset Link"
        android:textColor="#ffffff"
        android:textSize="18sp">

    </Button>




</LinearLayout>

