<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.owescm.client.activities.PrimaryEvaluationOpenSelectButtonActivity">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="Primary Evaluation"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_select_btn_peo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_erfx"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text"
        tools:listitem="@layout/item_erfx_closed"

        />
    <include layout="@layout/item_primary_evaluation_open_select_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
