<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rlt_nav_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="9/02/2020"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="00:30 AM"
        android:textColor="#8000a4"
        android:textSize="22sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/burgerking"/>

    <TextView
        android:id="@+id/testCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="test  company"
        android:textColor="#8000a4"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Holder"
        android:padding="2dp"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/testClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="test  client"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Delhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Delhi"
        android:textColor="#8000a4"
        android:padding="2dp"
        android:textSize="18sp"
        android:textStyle="normal" />
</LinearLayout>

