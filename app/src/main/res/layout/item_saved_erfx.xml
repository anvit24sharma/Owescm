<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/ll_eRFX_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#343A40"
        >

        <TextView
            android:id="@+id/tv_eRFX_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eRFX id:%s"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_savedAt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="2020-03-11"
        android:textColor="#ffffff"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:background="#343A40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_savedAt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="22:11:05"
        android:gravity="center"

        android:background="#343A40"
        android:layout_marginEnd="4dp"

        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_savedAt_date"
        />
    <TextView
        android:id="@+id/txt_headLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="HeadLine-"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ll_eRFX_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Location-"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_headLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>

<!--    <View-->
<!--        android:id="@+id/view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/txt_location"-->
<!--        android:layout_margin="8dp"-->
<!--        android:background="#b1b1b1"/>-->

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_location"
        android:background="@drawable/btn_purple"
        android:text="Select"
        android:textColor="#ffffff"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select"
        android:layout_marginTop="10dp"
        android:background="#b1b1b1"/>

</androidx.constraintlayout.widget.ConstraintLayout>